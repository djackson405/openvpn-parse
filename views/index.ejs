<!DOCTYPE html>
<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss/dist/tailwind.min.css" rel="stylesheet">
    <style>
      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        grid-gap: 16px;
      }

      .card {
        padding: 16px;
        border-radius: 4px;
        background-color: #ffffff;
        transition: all 0.2s ease-in-out;
      }

      .card:hover {
        transform: scale(1.05);
        box-shadow: 0px 2px 10px 2px rgba(0, 0, 0, 0.2);
      }
    </style>
  </head>
  <body class="bg-gray-200"><br>
    <div class="container mx-auto px-4">
      <h1 class="text-lg font-medium text-gray-700 mb-4">OpenVPN Client List and Routing Table</h1>
      <div class="grid">
        <% for (const entry of joinedArray) { %>
          <div class="card">
            <h2 class="text-xl font-medium text-gray-800 mb-2"> <%= entry.commonName %> </h2>
            <p class="text-sm font-medium text-gray-600 mb-2">
              Real Address: <%= entry.realAddress %> <br>
              Virtual Address: <%= entry.virtualAddress %> <br>
              Bytes Received: <%= entry.bytesReceived %> <br>
              Bytes Sent: <%= entry.bytesSent %> <br>
              Connected Since: <%= entry.connectedSince %> <br>
              Last Ref: <%= entry.lastRef %>
            </p>
          </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
